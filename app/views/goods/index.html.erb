<div class="topic-index-wrapper">
  <div class="container">
    <% @good_tweets.each do |tweet| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= tweet.user.username %>
            </h2>
            <p class="topic-text">
              <%= tweet.text %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
