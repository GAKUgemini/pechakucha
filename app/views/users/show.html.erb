<div class="container">
  <div class="row">
    <div class="col-md-12 text-center title">
      <h1 class="hello">hello <%=current_user.username%> !</h1>
      <h2 class="sub-text">this is your profile page</h2>
    </div>
  </div>
  <div class="row">
    <% if current_user.image.url == nil%>
      <div class="col-md-2"></div>
      <div class="col-md-8 text-center item">
      

          <tr>
            <td><p>self introduction</p></td>
            <td><section class="stats">
            <%= render 'stats' %>
            </td>
            <td><%=link_to 'edit', edit_user_path(current_user) %></td>
          </tr>
      </div>
      <div class="col-md-2"></div>
    <% else %>
      <div class="col-md-2"></div>
      <div class="col-md-8 text-center item">
        <%= image_tag current_user.image.url, class: 'rounded-circle', :size =>'180x180' %>

          <tr>
            <td><p>self introduction</p></td>
            <td><section class="stats">
            <%= render 'stats' %>
            </td>
            <td><%=link_to 'edit', edit_user_path(current_user) %></td>
          </tr>
      </div>
      <div class="col-md-2"></div>
    <% end %>
  </div>
</div>
